<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">?themePrimary</item>
        <item name="colorPrimaryDark">?themePrimaryDark</item>
        <item name="colorAccent">?themeAccent</item>
        <item name="android:fontFamily">?themeFontFamily</item>
        <item name="android:textViewStyle">?themeDefaultTextStyle</item>
        <item name="android:buttonStyle">?themeDefaultButtonStyle</item>
        <item name="android:windowBackground">?themeWindowBackgroundColor</item>

        <item name="themeFontFamily">@font/sans_pro_family</item>
        <item name="themeFontRegular">@font/source_sans_pro_regular</item>
        <item name="themeFontSemiBold">@font/source_sans_pro_semi_bold</item>
        <item name="themeFontBold">@font/source_sans_pro_bold</item>

        <!-- MaterialComponents attributes (needed if parent="Theme.AppCompat"). -->
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorSecondaryVariant">#018786</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorOnBackground">#000000</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorOnSurface">#000000</item>
        <item name="scrimBackground">#880099</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.MaterialComponents.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MaterialComponents.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MaterialComponents.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MaterialComponents.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MaterialComponents.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MaterialComponents.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MaterialComponents.Overline</item>

        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>
    </style>

    <style name="BaseAppTheme.DefaultTheme">
        <item name="themePrimary">@color/colorPrimary</item>
        <item name="themePrimaryDark">@color/colorPrimaryDark</item>
        <item name="themeAccent">@color/colorAccent</item>
        <item name="themeWindowBackgroundColor">@android:color/white</item>

        <!--Text theme attributes-->
        <item name="themeDefaultTextStyle">@style/BaseTextViewStyle.Content</item>
        <item name="themeTextSizeTitle">@dimen/title_text_size</item>
        <item name="themeTextSizeSubtitle">@dimen/subtitle_text_size</item>
        <item name="themeTextSizeContent">@dimen/content_text_size</item>
        <item name="themeTextColorPrimary">@color/colorTextPrimary</item>
        <item name="themeTextColorSecondary">@color/colorTextSecondary</item>
        <item name="themeTextColorAccent">@color/colorTextAccent</item>
        <item name="themeActionMenuTextColor">@android:color/white</item>

        <!--Edit text theme attributes-->
        <item name="themeEditTextOutLineDefaultColor">@color/colorBlackDark_242424</item>
        <item name="themeEditTextOutLineSuccessColor">@color/colorGreenDark_3E8606</item>
        <item name="themeEditTextOutLineFailureColor">@color/colorRedDark_C42625</item>

        <!--Button theme attributes-->
        <item name="themeDefaultButtonStyle">@style/ButtonStyle.Large.OutlinedButtonBlack</item>
        <item name="myButtonStyleSmallOutlinedBlack">@style/ButtonStyle.Small.OutlinedButtonBlack</item>

        <item name="themeButtonLeftPadding">@dimen/padding_16dp</item>
        <item name="themeButtonRightPadding">@dimen/padding_16dp</item>
        <item name="themeButtonTopPadding">@dimen/padding_12dp</item>
        <item name="themeButtonBottomPadding">@dimen/padding_12dp</item>

        <item name="themeLargeButtonLeftPadding">@dimen/padding_28dp</item>
        <item name="themeLargeButtonRightPadding">@dimen/padding_28dp</item>
        <item name="themeLargeButtonTopPadding">@dimen/padding_16dp</item>
        <item name="themeLargeButtonBottomPadding">@dimen/padding_16dp</item>

        <item name="themeMediumButtonLeftPadding">@dimen/padding_20dp</item>
        <item name="themeMediumButtonRightPadding">@dimen/padding_20dp</item>
        <item name="themeMediumButtonTopPadding">@dimen/padding_10dp</item>
        <item name="themeMediumButtonBottomPadding">@dimen/padding_10dp</item>

        <item name="themeSmallButtonLeftPadding">@dimen/padding_16dp</item>
        <item name="themeSmallButtonRightPadding">@dimen/padding_16dp</item>
        <item name="themeSmallButtonTopPadding">@dimen/padding_8dp</item>
        <item name="themeSmallButtonBottomPadding">@dimen/padding_8dp</item>

        <item name="themeButtonLargeTextSize">@dimen/button_large_text_size</item>
        <item name="themeButtonTextSize">@dimen/subtitle_text_size</item>
        <item name="themeButtonSmallTextSize">@dimen/content_text_size</item>
        <item name="themeButtonTextFont">@font/source_sans_pro_bold</item>
        <item name="themeButtonTextColor">@color/colorBlackDark_242424</item>

        <item name="themeButtonBackgroundOutlinedDark">@style/ButtonStyle.Large.OutlinedButtonBlack</item>
        <item name="themeButtonBackgroundOutlinedLight">@style/ButtonStyle.Large.OutlinedButtonYellow</item>
        <item name="themeButtonBackgroundContainedLight">@style/ButtonStyle.Large.ContainedButtonYellow</item>

        <!-- Bottom Navaigation -->
        <item name="themeBottomNavBackgroundColor">@color/colorYellowDark_F1B815</item>

    </style>

    <!-- Button Style   -->
    <style name="ButtonStyle" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">?themeButtonTopPadding</item>
        <item name="android:paddingBottom">?themeButtonBottomPadding</item>
        <item name="android:paddingLeft">?themeButtonLeftPadding</item>
        <item name="android:paddingRight">?themeButtonRightPadding</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">?themeButtonTextFont</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ButtonStyle.Large">
        <item name="android:paddingTop">?themeLargeButtonTopPadding</item>
        <item name="android:paddingBottom">?themeLargeButtonBottomPadding</item>
        <item name="android:paddingLeft">?themeLargeButtonLeftPadding</item>
        <item name="android:paddingRight">?themeLargeButtonRightPadding</item>
        <item name="android:textSize">@dimen/button_large_text_size</item>
    </style>

    <style name="ButtonStyle.Medium">
        <item name="android:paddingTop">?themeMediumButtonTopPadding</item>
        <item name="android:paddingBottom">?themeMediumButtonBottomPadding</item>
        <item name="android:paddingLeft">?themeMediumButtonLeftPadding</item>
        <item name="android:paddingRight">?themeMediumButtonRightPadding</item>
        <item name="android:textSize">@dimen/button_medium_text_size</item>
    </style>

    <style name="ButtonStyle.Small">
        <item name="android:paddingTop">?themeSmallButtonTopPadding</item>
        <item name="android:paddingBottom">?themeSmallButtonBottomPadding</item>
        <item name="android:paddingLeft">?themeSmallButtonLeftPadding</item>
        <item name="android:paddingRight">?themeSmallButtonRightPadding</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="ButtonStyle.Small.OutlinedButtonYellow">
        <item name="android:textColor">@color/btn_text_color_black_selector</item>
        <item name="android:background">@drawable/btn_bg_outlined_yellow_selector</item>
    </style>

    <style name="ButtonStyle.Small.ContainedButtonYellow">
        <item name="android:textColor">@color/btn_text_color_black_selector</item>
        <item name="android:background">@drawable/btn_bg_contained_selector</item>
    </style>

    <style name="ButtonStyle.Small.OutlinedButtonBlack">
        <item name="android:textColor">@color/btn_text_color_black_selector</item>
        <item name="android:background">@drawable/btn_bg_outlined_black_selector</item>
    </style>

    <style name="ButtonStyle.Medium.OutlinedButtonYellow">
        <item name="android:textColor">@color/btn_text_color_black_selector</item>
        <item name="android:background">@drawable/btn_bg_outlined_yellow_selector</item>
    </style>

    <style name="ButtonStyle.Medium.ContainedButtonYellow">
        <item name="android:textColor">@color/btn_text_color_black_selector</item>
        <item name="android:background">@drawable/btn_bg_contained_selector</item>
    </style>

    <style name="ButtonStyle.Medium.OutlinedButtonBlack">
        <item name="android:textColor">@color/btn_text_color_black_selector</item>
        <item name="android:background">@drawable/btn_bg_outlined_black_selector</item>
    </style>

    <style name="ButtonStyle.Large.ContainedButtonYellow">
        <item name="android:textColor">@color/btn_text_color_black_selector</item>
        <item name="android:background">@drawable/btn_bg_contained_selector</item>
    </style>

    <style name="ButtonStyle.Large.OutlinedButtonBlack">
        <item name="android:textColor">@color/btn_text_color_black_selector</item>
        <item name="android:background">@drawable/btn_bg_outlined_black_selector</item>
    </style>

    <style name="ButtonStyle.Large.OutlinedButtonYellow">
        <item name="android:textColor">@color/btn_text_color_black_selector</item>
        <item name="android:background">@drawable/btn_bg_outlined_yellow_selector</item>
    </style>

    <!-- Text Style   -->
    <style name="BaseTextViewStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?themeTextColorPrimary</item>
    </style>

    <style name="BaseTextViewStyle.Title">
        <item name="android:textSize">?themeTextSizeTitle</item>
        <item name="android:fontFamily">?themeFontBold</item>
    </style>

    <style name="BaseTextViewStyle.SubTitle">
        <item name="android:textSize">?themeTextSizeSubtitle</item>
        <item name="android:fontFamily">?themeFontSemiBold</item>
    </style>

    <style name="BaseTextViewStyle.Content">
        <item name="android:textSize">?themeTextSizeContent</item>
        <item name="android:fontFamily">?themeFontRegular</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullScreenDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="TabLayoutText">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorBlackLight_D1D1CF</item>
        <item name="colorControlActivated">@color/colorYellowDark_F1B815</item>
    </style>
    <!--  Material Theme  -->
    <style name="Material.TextInputLayout.OutlinedBox.ExposedDropdownMenu" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_marginStart">@dimen/margin_10dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_10dp</item>
        <item name="android:layout_marginTop">@dimen/margin_10dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen_15dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_15dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_15dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_15dp</item>
    </style>

    <style name="Material.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">@dimen/margin_6dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_6dp</item>
        <item name="android:layout_marginTop">@dimen/margin_6dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_6dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen_15dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_15dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_15dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_15dp</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>
</resources>